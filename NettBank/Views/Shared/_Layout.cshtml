<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NettBank</title>
    <link href="https://fonts.googleapis.com/css?family=Odibee+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/sites.css")
</head>
<body>
    <section class="Navigation">
        <nav class="nav Navigation-bar h-16" role="navigation">
            <div class="container">
                <div class="Menu flex">
                    <div class="brand-container">
                        @Html.ActionLink("NettBank", "Index", "Home", new { area = "Home" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="menu-items flex w-4/5 capitalize font-medium">
                        <div class="menu-item">@Html.ActionLink("Business Loan", "BusinessLoan", "Loans")</div>
                        <div class="menu-item">@Html.ActionLink("Property Loan", "PropertyLoan", "Loans")</div>
                        <div class="menu-item">@Html.ActionLink("Car Loan", "CarLoan", "Loans")</div>
                        <div class="menu-item">@Html.ActionLink("Student Loan", "StudentLoan", "Loans")</div>
                    </div>
                    <div class="mobile-menu">
                        <div class="hamburger-menu"></div>
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <div class="containers">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/site.js"></script>
    <script src="https://kit.fontawesome.com/3084c95dcf.js" crossorigin="anonymous"></script>
</body>
</html>
