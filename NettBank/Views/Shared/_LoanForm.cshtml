@model NettBank.Models.LoanTypeLoanCompanyViewModel


<div class="modal" role="alert">
    <button class="close" role="button">X</button>

    <section class="loan-form-container flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full">
            <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
                Compare popular @(Model.LoanType.Name + "s")
            </h2>
            @using (Html.BeginForm("SearchLoans", "Loans", FormMethod.Post, new { @class = "w-full max-w-lg", role = "form" }))
            {
                <div class="flex flex-wrap -mx-3 mb-6 mt-6">
                    <div class="w-full px-3">
                        @Html.LabelFor(m => m.LoanFormDto.Amount, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })
                        <div class="flex">
                            <input class="appearance-none block w-2/12 bg-gray-700 rounded-r-none border-r-0 text-center text-gray-200 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border-gray-500" disabled placeholder="₦">
                            @Html.TextBoxFor(m => m.LoanFormDto.Amount, new
                           {
                               @class = "appearance-none block w-10/12 bg-gray-200 rounded-l-none border-l-0 text-gray-700 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500",
                               placeholder = "100000"
                           })
                        </div>
                    </div>
                </div>


                <div class="flex flex-wrap -mx-3 mb-6">
                    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                        @Html.LabelFor(m => m.LoanFormDto.Loan, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })

                        @Html.TextBoxFor(m => m.LoanFormDto.Loan, new
                          {

                              @class = "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white",
                              placeholder = Model.LoanType.Name.ToString(),
                              @readonly ="readonly",
                              //Value = Model.LoanType.Name
                           })
                        @Html.HiddenFor( m => m.LoanFormDto.LoanId, new { Value = Model.LoanType.Id })
                    </div>
                    <div class="w-full md:w-1/2 px-3">
                        @Html.LabelFor(m => m.LoanFormDto.InterestRate, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })

                        <div class="flex">
                            @Html.TextBoxFor(m => m.LoanFormDto.InterestRate, new
                             {
                                 @class = "appearance-none block w-4/6 bg-gray-200 rounded-r-none border-r-0 text-gray-700 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white",
                                 placeholder = 5,
                              })
                            <input class="appearance-none block w-2/6 bg-gray-700 rounded-l-none border-l-0 text-center text-gray-200 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border-gray-500" disabled placeholder="%">
                        </div>
                    </div>
                </div>

                <div class="flex flex-wrap -mx-3 mb-2">
                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                        @Html.LabelFor(m => m.LoanFormDto.Duration, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })
                        <div class="flex">
                            @Html.TextBoxFor(m => m.LoanFormDto.Duration, new
                             {
                                 @class = "appearance-none block w-3/6 sm:w-4/6 bg-gray-200 rounded-r-none border-r-0 text-gray-700 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white",
                                 placeholder = 5,
                              })
                            <input class="appearance-none block w-3/6 sm:w-2/6 bg-gray-700 rounded-l-none border-l-0 text-center text-gray-200 border border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border-gray-500" disabled placeholder="yrs">
                        </div>
                    </div>

                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                        @Html.LabelFor(m => m.LoanFormDto.RepaymentFrequency, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })
                        <div class="relative">
                            @Html.EnumDropDownListFor(m => m.LoanFormDto.RepaymentFrequency,
                           "- select duration -",
                           new { @class = "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" })
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
                            </div>
                        </div>
                    </div>
                    <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
                        @Html.LabelFor(m => m.LoanFormDto.Rating, new { @class = "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" })
                        <div class="relative">
                            @Html.EnumDropDownListFor(m => m.LoanFormDto.Rating,
                           "- Ratings -",
                           new { @class = "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" })
                            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="group relative w-full flex mt-6 lg:mt-12 justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gray-700 hover:bg-gray-500 focus:outline-none focus:border-gray-700 focus:shadow-outline-gray active:bg-gray-700 transition duration-150 ease-in-out">
                    Get Result
                </button>
            }
        </div>
            @*<div> @Model.Name </div>
            <div> @Model.Icon </div>

            <a href="/Loans/@(Model.Name.Replace(" ", ""))">View</a>*@
    </section>
    
</div>

@Scripts.Render("~/Scripts/site.js")